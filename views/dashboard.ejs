<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Teacher Dashboard</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">
  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Teacher Dashboard</h1>
      <div>
        <% if (teacherEmail === 'admin@ri.edu.sg') { %>
          <a href="/console/teachers" class="btn btn-outline-primary me-2">Manage Teachers</a>
        <% } %>
        <a href="/console/logout" class="btn btn-secondary me-2">Logout</a>
        <a href="/console/new" class="btn btn-primary">Create New Form</a>
      </div>
    </div>

    <h2 class="h4 mb-3">Existing Forms</h2>
    <% if (forms && forms.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-striped align-middle">
          <thead class="table-dark">
            <tr>
              <th>Quiz Title</th>
              <th>Code</th>
              <th># Questions</th>
              <th># Options</th>
              <th>Created By</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% forms.forEach(form => { %>
              <tr>
                <td><%= form.quizTitle %></td>
                <td><strong><%= form.code %></strong></td>
                <td><%= form.questionCount %></td>
                <td><%= form.optionCount %></td>
                <td><%= form.createdBy %></td>
                <td>
                  <a 
                    href="/console/delete/<%= form.id %>"
                    class="btn btn-sm btn-danger"
                    onclick="return confirm('Delete this quiz?');"
                  >
                    Delete
                  </a>
                  <a 
                    href="/console/qr/<%= form.id %>"
                    class="btn btn-sm btn-info ms-1"
                  >
                    Show QR
                  </a>
                  <a 
                    href="/console/results/<%= form.id %>"
                    class="btn btn-sm btn-warning ms-1"
                  >
                    Show Results
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p class="text-muted">No forms found. Click "Create New Form" to add one.</p>
    <% } %>
  </div>
</body>
</html>
